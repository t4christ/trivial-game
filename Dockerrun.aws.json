{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "essential": true,
      "image": "postgres:alpine",
      "memory": 128,
      "hostname": "db"
    },
    {
      "essential": true,
      "image": "redis:latest",
      "memory": 128,
      "hostname": "redis",
      "portMappings": [
        {
          "containerPort": 6379,
          "hostPort": 6379
        }
      ]
    },
    {
      "command": [
        "/bin/sh",
        "-c",
        "python manage.py migrate && gunicorn quiz.wsgi:application --bind 0.0.0.0:8009 && celery -A quiz worker --beat --scheduler django --loglevel=info"
      ],
      "essential": true,
      "memory": 128,
      "image": "texplode/free-airtime",
      "hostname": "web"
    },
    {
      "essential": true,
      "image": "texplode/trivia-nginx",
      "memory": 256,
      "links": ["web"],
      "hostname": "nginx",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ]
    }
  ]
}
