{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name":"postgres",
      "essential": true,
      "image": "postgres:alpine",
      "memory": 256,
      "hostname": "db"
    },
    {
      "name":"redis",
      "essential": true,
      "image": "redis:latest",
      "memory": 128,
      "hostname": "redis",
      "portMappings": [
        {
          "containerPort": 6379,
          "hostPort": 6379
        }
      ]
    },
    {
      "command": [
        "./start.sh"
      ],
      "name":"web",
      "essential": true,
      "links": ["redis"],
      "memory": 256,
      "image": "texplode/free-airtime",
      "hostname": "web"
    },

    {
      "command": [
        "./start_celery_worker.sh"
      ],
      "name":"celery_worker",
      "essential": true,
      "links": ["redis"],
      "memory": 256,
      "image": "texplode/free-airtime",
      "hostname": "celery_worker"
    },

    {
      "command": [
        "./start_celery_beat.sh"
      ],
      "name":"celery_beat",
      "essential": true,
      "links": ["redis"],
      "memory": 256,
      "image": "texplode/free-airtime",
      "hostname": "celery_beat"
    },
    
    {
      "name":"nginx",
      "essential": true,
      "image": "texplode/trivia-nginx",
      "memory": 256,
      "links": ["web"],
      "hostname": "nginx",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ]
    }
  ]
}
