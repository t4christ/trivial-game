{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name":"postgres",
      "essential": true,
      "image": "postgres:alpine",
      "memory": 256,
      "hostname": "db"
    },
    {
      "name":"redis",
      "essential": true,
      "image": "redis:latest",
      "memory": 128,
      "hostname": "redis",
      "portMappings": [
        {
          "containerPort": 6379,
          "hostPort": 6379
        }
      ]
    },
    {
      "command": [
        "/bin/sh",
        "-c",
        "gunicorn quiz.wsgi:application --bind 0.0.0.0:8009"
      ],
      "name":"web",
      "essential": true,
      "memory": 256,
      "image": "texplode/free-airtime",
      "hostname": "web"
    },
    {
      "command": [
        "/bin/sh",
        "-c",
        "celery -A quiz worker -l info"
      ],
      "name":"celery-worker",
      "links": ["redis","db"],
      "essential": false,
      "memory": 256,
      "image": "texplode/free-airtime",
      "hostname": "celery-worker"
    },

    {
      "command": [
        "/bin/sh",
        "-c",
        "celery -A quiz beat -l info"
      ],
      "name":"celery-beat",
      "links": ["celery-worker","redis","db"],
      "essential": false,
      "memory": 256,
      "image": "texplode/free-airtime",
      "hostname": "celery-beat"
    },

    {
      "name":"nginx",
      "essential": true,
      "image": "texplode/trivia-nginx",
      "memory": 256,
      "links": ["web"],
      "hostname": "nginx",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ]
    }
  ]
}
