{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "command": [
        "./start.sh"
      ],
      "name":"web",
      "essential": true,
      "memory": 256,
      "image": "texplode/free-airtime",
      "hostname": "web"
    },

    {
      "command": [
        "./start_celery_worker.sh"
      ],
      "name":"celery-worker",
      "essential": false,
      "memory": 128,
      "image": "texplode/trivial-celery",
      "hostname": "celery-worker"
    },
    {
      "command": [
        "./start_celery_beat.sh"
      ],
      "name":"celery-beat",
      "essential": false,
      "memory": 128,
      "image": "texplode/trivial-celery",
      "hostname": "celery-beat"
    },
    
    {
      "name":"nginx",
      "essential": true,
      "image": "texplode/trivial-nginx",
      "memory": 128,
      "links": ["web"],
      "hostname": "nginx",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ]
    }
  ]
}
