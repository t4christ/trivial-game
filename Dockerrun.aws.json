{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "essential": true,
      "image": "postgres:alpine",
      "memory": 128,
      "links": ["web_app"],
      "mountPoints": [
        {
          "containerPath": "/var/lib/postgresql/data/",
          "sourceVolume": "Db_Data"
        }
      ],
      "name": "db"
    },
    {
      "essential": true,
      "image": "redis:latest",
      "memory": 128,
      "links": ["web_app"],
      "name": "redis",
      "portMappings": [
        {
          "containerPort": 6379,
          "hostPort": 6379
        }
      ]
    },
    {
      "command": [
        "/bin/sh",
        "-c",
        "python manage.py migrate && gunicorn quiz.wsgi:application --bind 0.0.0.0:8009 && celery -A quiz worker --beat --scheduler django --loglevel=info"
      ],
      "essential": true,
      "memory": 128,
      "image": "texplode/free-airtime",
      "name": "web_app"
    },
    {
      "essential": true,
      "image": "texplode/nginx",
      "memory": 256,
      "links": ["web_app"],
      "name": "nginx",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ]
    }
  ],
  "family": "",
  "volumes": [
    {
      "host": {
        "sourcePath": "db_data"
      },
      "name": "Db_Data"
    }
  ]
}
